    "version": "0.2.0",
    "configurations": [
        {
          "type": "lldb",
          "request": "launch",
          "name": "Debug executable 'rustycopier'",
          "cargo": {
            "args": ["build", "--bin=rustycopier", "--package=rustycopier"],
            "filter": {
              "name": "rustycopier",
              "kind": "bin"
            }
          },
          "args": [
            "D:\\PROGRAMAS\\OS\\ubuntu-22.04.1-desktop-amd64.iso",
            "D:\\Manga\\"
          ],
          "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rustycopier'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rustycopier",
                    "--package=rustycopier"
                ],
                "filter": {
                    "name": "rustycopier",
                    "kind": "bin"
                }
            },
            "args": ["D:\\PROGRAMAS\\OS\\ubuntu-22.04.1-desktop-amd64.iso", "D:\\Manga\\"],
            "cwd": "${workspaceFolder}"
        }
    ]
}